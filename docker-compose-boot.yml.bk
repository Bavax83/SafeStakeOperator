version: '3'
services:
  dvf_root_node:
    network_mode: "host"
    image: parastate/dvf-operator:${BOOT_IMAGE_TAG}
    pull_policy: always
    volumes:
      - node-ip:/data/nodeip
    command: sh -c "node_ip=`curl -s ifconfig.me` && dvf_root_node $node_ip 9005 2>&1"
    expose:
      - "9005"
    ports:
      - "9005:9005/udp"
    depends_on:
      my_ip:
        condition: service_started